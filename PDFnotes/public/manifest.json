{
    "manifest_version" : 3,
    "name" : "PDFnotes",
    "description" : "Converts the selected text of the webpage into a pdf.",
    "version" : "1.0",

    "action" : {
        "default_popup" : "index.html"
    },
    "permissions" : [
        "scripting",
        "activeTab",
        "storage",
        "commands",
        "notifications"
    ],
   
    "background" : {
        "service_worker" : "background.js",
        "type" : "module"
    },
    "host_permissions" : [
        "http://*/*",
        "https://*/*"
    ],
    "commands" : {
        "trigger_action" : {
            "suggested_key" : {
                "default": "Ctrl+Shift+S",
                "mac" : "Command+Shift+S"
            },
            "description" : "Trigger the action"
        }
    },
    "icons": {
        "16": "assets/PDFnotesLogo16.png",
        "32": "assets/PDFnotesLogo(32).png",
        "48": "assets/PDFnotesLogo48.png",
        "128": "assets/PDFnotesLogo128.png"
      },
      "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}